
generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

model Users {
    id Int @id @default(autoincrement())
    name String
    email String
    password String

    provider String?
    providerId String?
    temperature Float @default(0.5)
    systemPrompt String?

    chats Chats[]
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Chats {
    chatId String @id @unique
    title String

    user Users @relation(fields: [userId], references: [id])
    userId Int


    messages Messages[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

}

model Messages {
    id String @id @default(uuid())

    text String
    owner String
    loading String

    chatId String
    chat Chats @relation(fields: [chatId], references: [chatId])
    model String

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

 
}